@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>
@using Umbraco.Cms.Core.Models
@{
    var image_url = "";
    if (Model.Content.HasValue("profilePic"))
    {
        IPublishedContent image = (IPublishedContent)Model.Content.Value("profilePic");
        image_url = image.Url();
    }
}
<section id="about" style="padding-top:30px" class="about">
      <div class="container">

        <div class="section-title">
          <h2>@Model.Content.Value("title")</h2>
        </div>

        <div class="row">
          <div class="col-lg-4" data-aos="fade-right">
            <img src="@image_url" class="img-fluid" alt="">
          </div>
          <div class="col-lg-8 pt-4 pt-lg-0 content" data-aos="fade-left">
            <h3>@Model.Content.Value("profile")</h3>
            <p class="fst-italic">
              Total Experience : @Model.Content.Value("yOE")
            </p>
            <p>
              @Model.Content.Value("shortDescription")
            </p>
            <div class="row">
              <div class="col-lg-6">
                <ul>
                  <li><i class="bi bi-chevron-right"></i> <strong>Birthday:</strong> <span>@Model.Content.Value("birthday")</span></li>
                  <li><i class="bi bi-chevron-right"></i> <strong>Phone:</strong> <span>@Model.Content.Value("phone")</span></li>
                  <li><i class="bi bi-chevron-right"></i> <strong>City:</strong> <span>@Model.Content.Value("address")</span></li>
                </ul>
              </div>
              <div class="col-lg-6">
                <ul>
                  <li><i class="bi bi-chevron-right"></i> <strong>Degree:</strong> <span>@Model.Content.Value("degree")</span></li>
                  <li><i class="bi bi-chevron-right"></i> <strong>Email:</strong> <span>@Model.Content.Value("email")</span></li>
                </ul>
              </div>
            </div>
 
          </div>
        </div>

      </div>
    </section>