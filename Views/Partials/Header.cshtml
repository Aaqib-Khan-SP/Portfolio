@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@using Umbraco.Cms.Core.Models
<header id="header">
    <div class="d-flex flex-column">

      <div class="profile"><br/>
        <h1 class="text-light"><a href="index.html">@Model.Root().Value("headerName")</a></h1>
        <div class=" text-center">
            <h8 class="text-light text-center">@Model.Root().Value("headerDesignation")</h8>
        </div>

        <div class="social-links mt-3 text-center">
          <a href="#" class="facebook"><i class="bx bxl-facebook"></i></a>
          <a href="#" class="linkedin"><i class="bx bxl-linkedin"></i></a>
        </div>
      </div>

      <nav id="navbar" class="nav-menu navbar">
        <ul>
            @if (Model.Root().HasValue("headerLinks"))
            {
                IEnumerable<Link> links = (IEnumerable<Link>)Model.Root().Value("headerLinks");
                if (links != null)
                {
                    foreach (Link link in links)
                    {
                        <li><a href="@link.Url" class="nav-link scrollto active"><i class="bx bx-home"></i> <span>@link.Name</span></a></li>
                    }
                }
            }
        </ul>
      </nav><!-- .nav-menu -->
    </div>
  </header>